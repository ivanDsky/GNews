<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Header">
        <item name="fontFamily">@font/os_bold</item>
        <item name="android:textSize">@dimen/textHeader</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="NormalText">
        <item name="fontFamily">@font/os_semi_bold</item>
        <item name="android:textSize">@dimen/textNormal</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="DateText">
        <item name="fontFamily">@font/os_semi_bold</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">?colorSecondary</item>
        <item name="colorOnPrimary">?colorOnSecondary</item>
        <item name="colorPrimarySurface">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/grey_700</item>
    </style>


    <style name="AppBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_app_bar</item>
        <item name="android:elevation">@dimen/elevation</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:fontFamily">@font/os_semi_bold</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_dialog</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textSize">@dimen/textNormal</item>
        <item name="android:fontFamily">@font/os_bold</item>
        <item name="android:backgroundTint">?colorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="cornerRadius">@dimen/button_height</item>
    </style>

</resources>